<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/layout_item_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_bookshelf_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cover_shadow_small"
                android:padding="3dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_bookshelf_name_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/text_bookshelf_progress_left"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_middle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_bookshelf_middle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cover_shadow_small"
                android:padding="3dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_bookshelf_name_middle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/text_bookshelf_progress_middle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="12dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_bookshelf_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cover_shadow_small"
                android:padding="3dip"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/text_bookshelf_name_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/text_bookshelf_progress_right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#888888"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>